<?php
$numeroAleatorio = rand(1, 3);

echo "Número generado: $numeroAleatorio<br>";

switch ($numeroAleatorio) {
    case 1:
        echo "Uno";
        break;
    case 2:
        echo "Dos";
        break;
    case 3:
        echo "Tres";
        break;
    default:
        echo "Número fuera de rango";
        break;
}
?>
